{
  // Denne fila blir brukt når generert typescript kode i /out/src skal kompilerast til javascript i /out/esm.
  // Basert på https://github.com/tsconfig/bases/blob/main/bases/vite-react.json og
  // https://github.com/tsconfig/bases/blob/main/bases/strictest.json.
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "../out/esm",
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["../out/src/"]
}
